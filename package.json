{
  "name": "wechaty-puppet-gitter",
  "version": "0.7.0",
  "description": "Puppet Gitter for Wechaty",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/src/mod.js",
      "require": "./dist/cjs/src/mod.js"
    }
  },
  "typings": "./dist/esm/src/mod.d.ts",
  "engines": {
    "wechaty": ">=0.77",
    "node": ">=16",
    "npm": ">=7"
  },
  "scripts": {
    "clean": "shx rm -fr dist/*",
    "dist": "npm-run-all clean build dist:commonjs",
    "build": "tsc && tsc -p tsconfig.cjs.json",
    "dist:commonjs": "shx echo '{\"type\": \"commonjs\"}' > dist/cjs/package.json",
    "start": "cross-env NODE_OPTIONS='--no-warnings --loader=ts-node/esm' node examples/ding-dong-bot.ts",
    "lint": "npm run lint:es && npm run lint:ts && npm run lint:md",
    "lint:md": "markdownlint README.md",
    "lint:ts": "tsc --isolatedModules --noEmit",
    "lint:es": "eslint \"src/**/*.ts\" \"tests/**/*.spec.ts\" --ignore-pattern tests/fixtures/",
    "test": "npm run lint && npm run test:unit",
    "test:pack": "bash -x scripts/npm-pack-testing.sh",
    "test:unit": "tap --node-arg=--loader=ts-node/esm --node-arg=--no-warnings \"src/**/*.spec.ts\" \"tests/**/*.spec.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wechaty/wechaty-puppet-gitter.git"
  },
  "keywords": [
    "chatie",
    "wechaty",
    "chatbot",
    "bot",
    "wechat",
    "sdk",
    "puppet",
    "mock"
  ],
  "author": "Huan LI <zixia@zixia.net>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/wechaty/wechaty-puppet-gitter/issues"
  },
  "homepage": "https://github.com/wechaty/wechaty-puppet-gitter#readme",
  "devDependencies": {
    "@chatie/eslint-config": "^0.14.1",
    "@chatie/git-scripts": "^0.6.2",
    "@chatie/semver": "^0.4.7",
    "@chatie/tsconfig": "^0.20.2",
    "@types/cuid": "^1.3.1",
    "@types/lru-cache": "^5.1.1",
    "@types/uuid": "^8.3.1",
    "dotenv": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "pkg-jq": "^0.2.11",
    "shx": "^0.3.3",
    "tstest": "^0.7",
    "wechaty": "^0.77",
    "wechaty-puppet": "^0.51",
    "wtfnode": "^0.9.1"
  },
  "dependencies": {
    "axios": "^0.21.4",
    "cuid": "^2.1.8",
    "flash-store": "^1.3.4",
    "form-data": "^4.0.0",
    "lru-cache": "^6.0.0",
    "node-gitter": "^2.1.0",
    "typed-emitter": "^1.3.1",
    "uuid": "^8.3.2"
  },
  "publishConfig": {
    "access": "public",
    "tag": "next"
  },
  "files": [
    "bin/",
    "dist/",
    "src/"
  ],
  "tap": {
    "check-coverage": false
  },
  "git": {
    "scripts": {
      "pre-push": "npx git-scripts-pre-push"
    }
  }
}
