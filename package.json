{
  "name": "wechaty-puppet-gitter",
  "version": "0.4.5",
  "description": "Puppet Gitter for Wechaty",
  "directories": {
    "test": "tests"
  },
  "main": "dist/src/mod.js",
  "typings": "dist/src/mod.d.ts",
  "engines": {
    "wechaty": ">=0.17.46",
    "wechaty-puppet": ">=0.32.3"
  },
  "scripts": {
    "clean": "shx rm -fr dist/*",
    "dist": "npm run clean && tsc",
    "pack": "npm pack",
    "start": "ts-node examples/ding-dong-bot.ts",
    "lint": "npm run lint:es && npm run lint:ts && npm run lint:md",
    "lint:md": "markdownlint README.md",
    "lint:ts": "tsc --noEmit",
    "lint:es": "eslint \"src/**/*.ts\" \"tests/**/*.spec.ts\" --ignore-pattern tests/fixtures/",
    "test": "npm run lint && npm run test:unit",
    "test:pack": "bash -x scripts/npm-pack-testing.sh",
    "test:unit": "blue-tape -r ts-node/register 'src/**/*.spec.ts' 'tests/**/*.spec.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wechaty/wechaty-puppet-gitter.git"
  },
  "keywords": [
    "chatie",
    "wechaty",
    "chatbot",
    "bot",
    "wechat",
    "sdk",
    "puppet",
    "mock"
  ],
  "author": "Huan LI <zixia@zixia.net>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/wechaty/wechaty-puppet-gitter/issues"
  },
  "homepage": "https://github.com/wechaty/wechaty-puppet-gitter#readme",
  "devDependencies": {
    "@chatie/eslint-config": "^0.12.1",
    "@chatie/git-scripts": "^0.6.1",
    "@chatie/semver": "^0.4.7",
    "@chatie/tsconfig": "^0.11.4",
    "@types/cuid": "^1.3.0",
    "@types/faker": "^4.1.12",
    "@types/lru-cache": "^5.1.0",
    "@types/quick-lru": "^3.0.0",
    "@types/uuid": "^8.3.0",
    "dotenv": "^8.2.0",
    "pkg-jq": "^0.2.4",
    "shx": "^0.3.2",
    "tstest": "^0.4.10",
    "wechaty": "^0.47.23",
    "wechaty-puppet": "^0.32.3",
    "wtfnode": "^0.8.1"
  },
  "peerDependencies": {
    "wechaty-puppet": "*"
  },
  "dependencies": {
    "axios": "^0.20.0",
    "cuid": "^2.1.8",
    "faker": "^4.1.0",
    "flash-store": "^0.20.6",
    "form-data": "^3.0.0",
    "lru-cache": "^6.0.0",
    "node-gitter": "^2.1.0",
    "quick-lru": "^5.1.0",
    "state-switch": "^0.6.18",
    "typed-emitter": "^1.2.0",
    "uuid": "^8.3.0",
    "watchdog": "^0.8.17"
  },
  "publishConfig": {
    "access": "public",
    "tag": "next"
  },
  "git": {
    "scripts": {
      "pre-push": "npx git-scripts-pre-push"
    }
  }
}
